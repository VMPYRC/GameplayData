<?xml version="1.0" encoding="utf-8"?>
<base>
  <Current_Tuning>
    <kChanceInsectSpawnerSpawnsWildflower value="0.25">
      <!--Range 0.0 - 1.0.  The chance an insect spawner will attempt to spawn a minor pet instead of the normally spawned objects.-->
    </kChanceInsectSpawnerSpawnsWildflower>
    <kChanceRGMSpawnerSpawnsWildflower value="0.25">
      <!--Range 0.0 - 1.0.  The chance a rock/gem/metal spawner will attempt to spawn a minor pet instead of the normally spawned objects.-->
    </kChanceRGMSpawnerSpawnsWildflower>
    <kChanceSeedSpawnerSpawnsWildflower value="0.25">
      <!--Range 0.0 - 1.0.  The chance a seed spawner will attempt to spawn a minor pet instead of the normally spawned objects.-->
    </kChanceSeedSpawnerSpawnsWildflower>
    <kMaxWildflowersInWorld value="30">
      <!--The maximum number of wildflowers allowed in the world at any given time-->
    </kMaxWildflowersInWorld>
    <kMinimumTemperatureForWildflowerSpawn value="30">
      <!--Range 0.0+.  The minimum temperature at which a Wildflower is allowed to spawn. Anything below this temperature will cause a wildflower to not spawn.-->
    </kMinimumTemperatureForWildflowerSpawn>
    <kBaseLifespan value="5">
      <!--The base lifespan of a wildflower, in sim days. 0.0+-->
    </kBaseLifespan>
    <kLifespanJitter value="0.5,1.5">
      <!--The min/max jitter applied to the base lifespan. 0.0+-->
    </kLifespanJitter>
    <kMaxLotsToGetFlowers value="5, 10, 20, 30">
      <!--The max number of lots, per CPU level, to get some wildflowers in the spring time. {Low, Medium, High, Uber}-->
    </kMaxLotsToGetFlowers>
  </Current_Tuning>
</base>