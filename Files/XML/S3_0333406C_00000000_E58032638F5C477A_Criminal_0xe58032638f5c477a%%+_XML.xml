<?xml version="1.0" encoding="utf-8"?>
<base>
  <Current_Tuning>
    <kLevelForLimo value="9" />
    <kInteractionScorePenalty value="-200">
      <!--Interaction score penalty for wanting to run away from sim that has the aura of evil- to reduce sims autonomously interacting then running away.-->
    </kInteractionScorePenalty>
    <kAuraOfEvilParams>
      <RelationshipToRunAway value="10">
        <!--Max relationship level for a sim to run away-->
      </RelationshipToRunAway>
      <RunAwayTraits value="Coward, Neurotic, Loser, OverEmotional">
        <!--The traits a sim must have to run away-->
      </RunAwayTraits>
      <BooTraits value="Good, Friendly, FamilyOriented">
        <!--The traits a sim must have to boo-->
      </BooTraits>
      <CheerTraits value="Evil, MeanSpirited, Insane">
        <!--The traits a sim must have to cheer-->
      </CheerTraits>
      <RelationshipToLose value="-3">
        <!--How much relationship an opposed sim loses-->
      </RelationshipToLose>
      <RelationshipToGain value="5">
        <!--How much relationship an aligned sim gains-->
      </RelationshipToGain>
      <VFXLength value="3">
        <!--How long in sim minutes the aura should last.-->
      </VFXLength>
      <VFXDieLength value="3">
        <!--The time it takes for the vfx to fade-->
      </VFXDieLength>
      <PositiveReactions value="Cheer, Wave">
        <!--The ReactionTypes used positively-->
      </PositiveReactions>
      <NegativeReactions value="Boo">
        <!--The ReactionTypes used negatively-->
      </NegativeReactions>
      <ReactionPriority value="Autonomous">
        <!--The priority the boo and cheer reactions will be run at.-->
      </ReactionPriority>
      <RunAwayPriority value="NonCriticalNPCBehavior">
        <!--Range:  Interaction priority levels.  Description:  The priority that the 'run away' interaction gets -->
      </RunAwayPriority>
      <BooOccupations value="LawEnforcement">
        <!--Occupations that will always have a negative reaction to this aura-->
      </BooOccupations>
      <CheerOccupations value="Criminal">
        <!--Occupations that will always have a positive reaction to this aura-->
      </CheerOccupations>
    </kAuraOfEvilParams>
  </Current_Tuning>
</base>