<?xml version="1.0" encoding="utf-8"?>
<base>
  <Current_Tuning>
    <kMaxDistance value="6">
      <!--Description:  Maximum distance the sim will go away from the register when tending it-->
    </kMaxDistance>
    <kMinRadiusDistance value="0.5">
      <!--Description:  When the sim Routes back to the register they won't get any closer than this-->
    </kMinRadiusDistance>
    <kMaxRadiusDistance value="3">
      <!--Description:  When the sim Routes back to the register they will route at least this close-->
    </kMaxRadiusDistance>
    <kMinWanderDistance value="2">
      <!--Description:  When the sim wanders they will walk at least this far-->
    </kMinWanderDistance>
    <kMaxWanderDistance value="5">
      <!--Description:  Maximum distance the sim will walk when they wander-->
    </kMaxWanderDistance>
    <kWanderChance value="15">
      <!--Description:  Chance sim will wander after an animation loop-->
    </kWanderChance>
    <kLookAtSimChance value="40">
      <!--Range:  0 - 100  Description:  Chance sim will look at a nearby sim, or if none turn-->
    </kLookAtSimChance>
    <kMaxTurnToDistance value="6">
      <!--Description:  A sim needs to be this close in order to consider facing them-->
    </kMaxTurnToDistance>
    <kChanceToStandBehindRegister value="50">
      <!--Range: 1-100 Description:  This is the chance sim will stand behind register-->
    </kChanceToStandBehindRegister>
    <kSimMinBehindRegister value="15">
      <!--Range:  1-x  Description:  Time in Sim minutes sim will stand behind counter playing randomd idle loop-->
    </kSimMinBehindRegister>
  </Current_Tuning>
</base>