<?xml version="1.0" encoding="utf-8"?>
<base>
  <Current_Tuning>
    <kEnvironmentTuning>
      <EnvironmentScore value="-5">
        <!--Range: Any float value.  Description:  Each game object can define an environment score to contribute to the room environment score when Sims are in it.  It is expected that fancier, pretty objects will give a positive Environment score while dirty, ugly objects will give a negative Environment score.  The score contribution is defined by this tunable.-->
      </EnvironmentScore>
    </kEnvironmentTuning>
    <kTuningBed>
      <WellRestedStrength value="3">
        <!--Mood score added by the well rested buff given by the bed. Only trigerred if value is greater than 0.-->
      </WellRestedStrength>
      <ComfyBuffStrength value="5">
        <!--Mood score added by comfy buff.-->
      </ComfyBuffStrength>
      <GivesBadNightsSleep value="True">
        <!--Can this bed give you the Bad Nights Sleep buff?-->
      </GivesBadNightsSleep>
      <EnergyMultiplier value=".8">
        <!--Multiplier on energy gain rate for this bed.  1.0f is normal, 0.5f is slow, 2.0f is really fast.-->
      </EnergyMultiplier>
      <AllowIntersectionWithCeilingObjects value="True">
        <!--True if this bed is allowed to intersect objects on the cieling, false otherwise.-->
      </AllowIntersectionWithCeilingObjects>
      <WooHooEffectName value="" />
      <HygieneDelta value="-1">
        <!--Hygiene change rate on this bed (not a multiplier). Positive number makes sim cleaner, negative makes them dirtier.-->
      </HygieneDelta>
    </kTuningBed>
    <kNetWorthThresholdForAutonomousUse value="10000">
      <!--Sims with household net worth below this number can autonomously use trash heap beds-->
    </kNetWorthThresholdForAutonomousUse>
    <kTrashbedScoringMultiplier value=".1">
      <!--Scoring multiplier for autonomous sleeping in trashbed. Should be a small number to deter individuals from sleeping in it. Slobs and poor Sims do not have this multiplier applied.-->
    </kTrashbedScoringMultiplier>
  </Current_Tuning>
</base>