      <!--Minimum LTR for 2 unrelated pets to have and be able to snuggle with each other-->
    </kAllowLTRForSnuggle>
    <kSnuggleParentChildScoringMultiplier value="2">
      <!--Range: floats > 1.0. Desc: Autonomy scoring multiplier for the Snuggle interaction when a parent and child are considering snuggling.-->
