<base>
  <Current_Tuning>
    <kMaxChargeLevel value="100">
      <!--Range:  0 - 100  Description:  The project will be considered fully charged once the combination of all three charge levels is at this value or higher-->
    </kMaxChargeLevel>
    <kFailureChargeLoss value="0.05">
      <!--Range:  0 - 1  Description:  This is the percentage of the project's charge which will be lost upon a normal failure-->
    </kFailureChargeLoss>
    <kEpicChance value="0.33">
      <!--Range:  0 - 1  Description:  If the activation fails, this is the chance that the failure will be epic-->
    </kEpicChance>
    <kWhiteChargeMaxPercent value="0.4">
      <!--Range:  0 - 1  Description:  All of the individual charge colors must make up no more than this percent of the total charge in order for a white charge to occur-->
    </kWhiteChargeMaxPercent>
    <kMeteorShowerDuration value="15">
      <!--Range:  0 - 100  Description:  This is the duration of the meteor shower that results from a white charge (in sim minutes)-->
    </kMeteorShowerDuration>
    <kMeteorImpactIntervalBase value="0.75">
      <!--Range:  0 - 100  Description:  This is the base interval between meteor impacts for the meteor shower(in sim minutes)-->
    </kMeteorImpactIntervalBase>
    <kMeteorImpactIntervalVariance value="0.5">
      <!--Range: 0 - 1  Description: The interval between meteor impacts will randomly vary by up to this percentage of the base value-->
