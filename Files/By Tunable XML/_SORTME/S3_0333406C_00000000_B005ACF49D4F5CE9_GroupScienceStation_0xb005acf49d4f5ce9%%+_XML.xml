    <kMedatorMeteoriteValues value="EP9 magicGnomeGraduate, BaseGame HarvestMoneyBag, BaseGame MeteorMedium, BaseGame MeteorLarge, BaseGame gem, BaseGame metal">
      <!--Description:  An array of ProductVersions and medator instance names that can be spawned as meteorites. Same format as for Wardrobe tuning. Do not include collectibles here.-->
    </kMedatorMeteoriteValues>
    <kMedatorMeteoriteWeights value="1, 4, 7, 7, 6, 6">
      <!--Description:  This tunable does useful things-->
    </kMedatorMeteoriteWeights>
    <kMinimumMoneyBagContents value="100">
      <!--Range:  Positive  Description:  This is the minimum amount of simoleons that the HarvestMoneyBag will contain-->
    </kMinimumMoneyBagContents>
    <kMaximumMoneyBagContents value="500">
      <!--Range:  Positive  Description:  This is the maximum amount of simoleons that the HarvestMoneyBag will contain-->
    </kMaximumMoneyBagContents>
    <kWatchDistance value="5">
      <!--Range:  0 - 100  Description:  The distance from the project that sims should route to in order to watch the glow.-->
    </kWatchDistance>
    <kEpicFailureChargeLoss value="0.10">
      <!--Range:  0 - 1  Description: this is the percentage of the project's charge which will be lost upon epic failure-->
    </kEpicFailureChargeLoss>
